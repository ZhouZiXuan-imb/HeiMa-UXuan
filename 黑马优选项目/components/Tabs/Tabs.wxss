/* components/Tabs/Tabs.wxss */
.tabs {
  display: flex;
  justify-content: space-between;
}

.tabs_title {
  width: 180rpx;
  height: 1010rpx;
}

.tabs_item {
  width: 100%;
  line-height: 120rpx;
  text-align: center;
  font-size: 24rpx;
  background-color: #F7F7F7;
}

.active {
  background-color: #fff;
  position: relative;
}

.active::before {
  content: ' ';
  display: block;
  width: 3px;
  height: 30px;
  background-color: #C00000;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}

.tabs_title_scroll {
  height: 100%;
  width: 100%;
}

.tabs_content_title {
  font-size: 12px;
  font-weight: bold;
  text-align: center;
  padding: 15px 0;
}

.tabs_content {
  width: 100%;
}

.tabs_content_scroll {
  height: 1010rpx;
}

.t_items_img {
  width: 120rpx;
  height: 120rpx;
}

.tabs_content_content {
  display: flex;
  flex-wrap: wrap;
}

.tabs_content_content_items {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
}

.t_items_text {
  font-size: 24rpx;
}
/* pages/goods_detail/main.wxss */
swiper {
  height: calc(375rpx*2);
}

swiper image {
  width: 100%;
  height: 100%;
}

.goods_body {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.goods_name {
  padding: 40rpx 20rpx;
}

.goods_price {
  color: #c00000;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}

.goods_text {
  width: calc(284rpx*2);
  font-size: 26rpx;
  margin-right: 20rpx;
}

.goods_collect {
  width: 160rpx;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-left: 1px solid #efefef;
  color: gray;
}

.freight {
  font-size: 12px;
  color: gray;
  margin: 10px 0;
}